{
    "name": "robot-ekf-workspace",
    "dockerFile": "Dockerfile",
    "extensions": [
        "ms-vscode.cpptools",
        "ms-iot.vscode-ros"
    ],
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined",
        "--net", "host"
        // "-e", "QT_X11_NO_MITSHM=1",
        // "-e", "DISPLAY=192.168.9.108:0.0",
        // "-v",
        // "${env:HOME}${env:USERPROFILE}/.ssh:/root/.ssh"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "postCreateCommand": "bash /robot_ekf_ws/src/docker-setup.sh",
    "workspaceMount": "src=${localWorkspaceFolder}/,dst=/robot_ekf_ws/src/,type=bind,consistency=cached",
    "workspaceFolder": "/robot_ekf_ws"
}